#sign_in.row
  .up-separator
    = image_tag("shadow_up.png")
  .content-wrapper
    .content-container.corner-shadow
      %article
        = bootstrap_form_tag url: sessions_path, class: "sign_in" do
          %header
            %h1 Please Log In
          %fieldset
            .form-group
              = label_tag :email, "Email Address"
              .row
                .col-sm-4
                  = email_field_tag :email, nil, class: "form-control"
            .form-group
              = label_tag :password, "Password"
              .row
                .col-sm-4
                  = password_field_tag :password, nil, class: "form-control"
          %fieldset.form-group.action
            = submit_tag "Log In", class: "btn btn-default"
    .up-separator.background
      = image_tag("shadow_up.png")


