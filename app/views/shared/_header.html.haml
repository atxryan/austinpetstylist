.container
  .navbar-header
    %button.navbar-toggle.collapsed{:type => "button", "data-toggle" => "collapse", "data-target" => ".aps-navbar-collapse"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to "Austin Pet Stylist", root_path, class: "navbar-brand"
  %nav.navbar-collapse.aps-navbar-collapse.collapse{"aria-expanded" => "false", "style" => "height: 1px"}
    %ul.nav.navbar-nav
      %li= link_to "Services", services_path
      %li= link_to "About Us", about_us_path
      %li= link_to "VIP Rewards", vip_rewards_path
      %li= link_to "Policies", policies_path
      %li= link_to "Resources", resources_path
      %li= link_to "Contact", contact_path
    %ul.nav.navbar-nav.navbar-right
      - if !logged_in?
        %li= link_to "Log In", sign_in_path
      - if logged_in?
        %li= link_to "Create Testimonial", new_testimonial_path
        %li= link_to "Log Out", sign_out_path